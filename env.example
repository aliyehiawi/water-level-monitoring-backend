# Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# Database Configuration
DB_URL=jdbc:h2:mem:testdb
DB_USERNAME=sa
DB_PASSWORD=password

# JWT Security Configuration
# Generate a strong secret for production: openssl rand -hex 32
JWT_SECRET=36467a12819db4d4d16ea45254a31402
JWT_EXPIRATION=86400000

# H2 Console (set to false in production)
H2_CONSOLE_ENABLED=true

# Spring Profile (dev, prod)
SPRING_PROFILES_ACTIVE=dev

# Server Configuration (optional)
SERVER_PORT=8080

# CORS Configuration (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# WebSocket Configuration (comma-separated)
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# MQTT Configuration (Free broker for university project)
# Default: test.mosquitto.org (public test broker)
# Alternative free options:
# - HiveMQ Cloud: broker.hivemq.com:1883
# - Local Mosquitto: tcp://localhost:1883
MQTT_BROKER_URL=tcp://test.mosquitto.org:1883
MQTT_CLIENT_ID=water-level-backend
MQTT_USERNAME=
MQTT_PASSWORD=

